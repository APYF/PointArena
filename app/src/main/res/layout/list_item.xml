<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height">

    <ImageView
        android:id="@+id/attraction_image"
        android:layout_width="@dimen/list_item_height"
        android:layout_height="@dimen/list_item_height" />

    <LinearLayout
        android:id="@+id/list_item_text_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/attraction_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/attraction_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:paddingLeft="@dimen/list_item_left_padding"
            android:paddingRight="@dimen/list_item_right_padding"
            android:textColor="@color/fontColor"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Attraction Name"/>

        <LinearLayout
            android:id="@+id/attraction_address_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/list_item_left_padding"
            android:paddingRight="@dimen/list_item_right_padding">

            <ImageView
                android:id="@+id/map_icon"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_gravity="center"
                android:src="@drawable/baseline_place_black_24" />

        <TextView
            android:id="@+id/attraction_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/list_item_left_padding"
            android:textColor="@color/fontColor2"
            android:textSize="18sp"
            tools:text="Attraction Address" />

    </LinearLayout>

        <TextView
            android:id="@+id/attraction_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:paddingLeft="@dimen/list_item_left_padding"
            android:paddingRight="@dimen/list_item_right_padding"
            android:textColor="@color/fontColor2"
            android:textSize="18sp"
            tools:text="Attraction Description" />


    </LinearLayout>

</RelativeLayout>
